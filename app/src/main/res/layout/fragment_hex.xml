<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
		android:id="@+id/title"
        android:text="@string/hexagon"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ToggleButton
        android:id="@+id/clickMode"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textOn="Node"
        android:textOff="Edge"
        android:background="@drawable/btn_show"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/coordinates"
        android:text="coords"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/clickMode"
        />

    <TextView
        android:id="@+id/nearest"
        android:text="nearest"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coordinates"
        android:layout_toLeftOf="@id/clickMode"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/clickMode"
        android:layout_alignParentRight="true"
        >

        <RadioButton
            android:id="@+id/depth0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />

        <RadioButton
            android:id="@+id/depth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            />

        <RadioButton
            android:id="@+id/depth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            />

        <RadioButton
            android:id="@+id/depth3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            />

        <RadioButton
            android:id="@+id/depth4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            />

        <RadioButton
            android:id="@+id/depth5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            />

        <RadioButton
            android:id="@+id/depth6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            />

    </RadioGroup>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/clickMode"
        android:layout_toLeftOf="@id/radioGroup"
        />

</RelativeLayout>
